@model Task.Models.Student

@{
    Layout = null;
}

<!DOCTYPE html>

<html dir="rtl">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>تعديل الطالب </h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)

                <div class="form-group">
                    <label class="control-label col-md-1 pull-right col-lg-pull-0">الاسم </label>
                    <div class="col-md-10 pull-right col-lg-pull-0">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-1 pull-right col-lg-pull-0">تاريخ الميلاد  </label>
                    <div class="col-md-10 pull-right col-lg-pull-0">
                        @Html.EditorFor(model => model.BirthDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.BirthDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-1 pull-right col-lg-pull-0">المحافظه  </label>
                    <div class="col-md-10 pull-right col-lg-pull-0">
                        @Html.DropDownList("GovernorateId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.GovernorateId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-1 pull-right col-lg-pull-0">المحافظه  </label>
                    <div class="col-md-10 pull-right col-lg-pull-0">
                        @Html.DropDownList("NeighborhoodId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.NeighborhoodId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-1 pull-right col-lg-pull-0">الشعيه  </label>
                    <div class="col-md-10 pull-right col-lg-pull-0">
                        @Html.DropDownList("FieldId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FieldId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="حفظ التعديلات " class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("رجوع ", "Index", null, new { @class = "btn btn-info" })
        </div>
    </div>
</body>
</html>
