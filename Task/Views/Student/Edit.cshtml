@model Task.Controllers.CreateStudent

@{
    Layout = null;
}

<!DOCTYPE html>

<html dir="rtl">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>تعديل الطالب </h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Student.ID)

                <div class="form-group">
                    <label class="control-label col-md-1 pull-right col-lg-pull-0">الاسم </label>
                    <div class="col-md-10 pull-right col-lg-pull-0">
                        @Html.EditorFor(model => model.Student.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Student.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-1 pull-right col-lg-pull-0">تاريخ الميلاد  </label>
                    <div class="col-md-10 pull-right col-lg-pull-0">
                        @Html.EditorFor(model => model.Student.BirthDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Student.BirthDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-1 pull-right col-lg-pull-0">المحافظه  </label>
                    <div class="col-md-10 pull-right col-lg-pull-0">
                        @Html.DropDownListFor(a=>a.Student.GovernorateId, (SelectList)ViewBag.GovernorateId, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Student.GovernorateId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-1 pull-right col-lg-pull-0">الحي   </label>
                    <div class="col-md-10 pull-right col-lg-pull-0">
                        @Html.DropDownListFor(a=>a.Student.NeighborhoodId, (SelectList)ViewBag.NeighborhoodId, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Student.NeighborhoodId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-1 pull-right col-lg-pull-0">المدرس </label>
                    <div class="col-md-10 pull-right col-lg-pull-0">
                        @Html.ListBoxFor(a=>a.TeacherId,(SelectList)ViewBag.StudentTeachers,new {@class="form-control"})
                        @Html.ValidationMessageFor(model => model.TeacherId, "", new {@class = "text-danger"})

                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-1 pull-right col-lg-pull-0">الشعيه  </label>
                    <div class="col-md-10 pull-right col-lg-pull-0">
                        @Html.DropDownListFor(a=>a.Student.FieldId, (SelectList)ViewBag.FieldId, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Student.FieldId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="حفظ التعديلات " class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("رجوع ", "Index", null, new { @class = "btn btn-info" })
        </div>
    </div>
</body>
</html>
